<h1>New Species</h1>

<% if @species.errors.any? %>
<h3> Please fix these errors:</h3>
<ul>
  <% @species.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
  <% end %>

<div class="form-group">
<form action="/species/new" method="post">
  <label class="control-label" for="species_name">Name</label>
  <input class="form-control" id="species_name" name="name" type="text" value="<%= @species.name %>">
  <br>
  <button class="btn btn-primary">Create Species</button>
</form>
</div>