<h1>Edit Species</h1>

<% if @species.errors.any? %>
<h3> Please fix these errors:</h3>
<ul>
  <% @species.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
  <% end %>

<div class="form-group">
  <form action="/species/<%= @species.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
<%= render('form') %>
  </form>
</div>